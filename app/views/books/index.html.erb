<h2>User info</h2>

<% if @user.image.attached? %>
  <%= image_tag @user.image, size: "100x100" %>
<% else %>
  <%= image_tag 'no_image', size: "100x100" %>
<% end %>

  <h4>name</h4>
  <p><%= @user.name %></p>
  <h4>introduction</h4>
  <p><%= @user.introduction %></p>
  <p>
  <%= link_to "Edit", edit_user_path(@user, params[:id]) %>
  </p>


<h2>New book</h2>

 <%= form_with model: @book, url:'/books' do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>

 <% end %>



<h2>Books</h2>

<table class="book-list">

  <thead>
    <tr class="thead">
      <th class="book-data"></th>
      <th class="book-data">Title</th>
      <th class="book-data">Opinion</th>
    </tr>
  </thead>

<tbody>
<% @books.each do |book| %>
<tr>
  <td>
<% if @user.image.attached? %>
  <%= link_to user_path(@user.id) do %>
  <%= image_tag @user.image, size: "100x100" %>
  <% end %>
<% else %>
  <%= link_to user_path(@user.id) do %>
  <%= image_tag 'no_image', size: "100x100" %>
  <% end %>
<% end %>
  </td>
  <td class="book-data"><%= link_to book.title, book_path(book.id) %></td>
  <td class="book-data"><%= book.body %></td>
</tr>
<% end %>
</tbody>

</table>

