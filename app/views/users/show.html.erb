<div class="container">
<div class="row">

<div class="col-md-3">
<%= render 'books/sidebar', user: @user, book: @book %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>

<table class="book-list">

  <thead>
    <tr class="thead">
      <th class="book-data"></th>
      <th class="book-data">Title</th>
      <th class="book-data">Opinion</th>
      <th class="book-data"></th>
    </tr>
  </thead>

<tbody>
<% @books.each do |book| %>
<tr>
  <td>
<% if @user.profile_image.attached? %>
  <%= link_to user_path(@user.id) do %>
  <%= image_tag @user.profile_image, size: "100x100" %>
  <% end %>
<% else %>
  <%= link_to user_path(@user.id) do %>
  <%= image_tag 'no_image', size: "100x100" %>
  <% end %>
<% end %>
  </td>
  <td class="book-data"><%= link_to book.title, book_path(book.id) %></td>
  <td class="book-data"><%= book.body %></td>
</tr>
  <td></td>
<% end %>
</tbody>

</table>
</div>

</div>
</div>