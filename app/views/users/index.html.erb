<h2>User info</h2>

<% if @user.image.attached? %>
  <%= image_tag @user.image, size: "100x100" %>
<% else %>
  <%= image_tag 'no_image', size: "100x100" %>
<% end %>

  <h4>name</h4>
  <p><%= @user.name %></p>
  <h4>introduction</h4>
  <p><%= @user.introduction %></p>
  <p>
  <%= link_to "Edit", edit_user_url(@user, params[:id]) %>
  </p>


<h2>New book</h2>

 <%= form_with model: @book, url:'/books' do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>

 <% end %>



<h2>Users</h2>

<table class="user-list">

  <thead>
    <tr class="thead">
      <th class="user-data">image</th>
      <th class="user-data">name</th>
      <th class="user-data"></th>
    </tr>
  </thead>

<tbody>
<% @users.each do |user| %>
<tr>
  <td>
<% if @user.image.attached? %>
  <%= image_tag @user.image, size: "100x100" %>
<% else %>
  <%= image_tag 'no_image', size: "100x100" %>
<% end %>
  </td>
  <td class="book-data"><%= user.name %></td>
   <td class="book-data"><%= link_to "Show", user_path(user.id) %></td>
</tr>
<% end %>
</tbody>

</table>